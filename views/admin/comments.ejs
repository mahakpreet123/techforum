<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comment Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white p-3 vh-100">
            <h1 class="mb-4">
                <span class="text-primary">Tech</span><span class="text-danger">Forum</span>
            </h1>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/admin/dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/admin/users">
                        <i class="fas fa-users"></i> User Management
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/admin/posts">
                        <i class="fas fa-file-alt"></i> Post Management
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/admin/comments">
                        <i class="fas fa-comments"></i> Comment Management
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/auth/logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content flex-grow-1 p-4">
            <div class="container-fluid">
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Comment Management</h2>
                </div>

                <!-- Comments Table -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Content</th>
                            <th>User</th>
                            <th>Post</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% comments.forEach((comment, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= comment.content %></td>
                                <td><%= comment.user ? comment.user.name : 'Unknown User' %></td>
                                <td><%= comment.postTitle %></td>
                                <td><%= new Date(comment.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <form action="/admin/comments/delete/<%= comment._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
